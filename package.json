{
  "name": "mongoose-currency-convert",
  "version": "0.1.2",
  "description": "A lightweight Mongoose plugin for automatic currency conversion at save time - flexible, extensible, and service-agnostic.",
  "keywords": [
    "mongoose",
    "plugin",
    "currency",
    "conversion",
    "exchange-rate",
    "mongodb",
    "typescript",
    "money"
  ],
  "license": "MIT",
  "author": {
    "name": "maku85",
    "email": "makuma85@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maku85/mongoose-currency-convert.git"
  },
  "homepage": "https://github.com/maku85/mongoose-currency-convert#readme",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/helpers.js",
      "require": "./dist/utils/helpers.cjs",
      "types": "./dist/utils/helpers.d.ts"
    },
    "./types": {
      "import": "./dist/types.d.ts",
      "types": "./dist/types.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json --outDir dist --declaration false && for f in dist/*.js; do mv \"$f\" \"${f%.js}.cjs\"; done",
    "build": "pnpm build:esm && pnpm build:cjs",
    "clean": "rm -rf dist",
    "prepare": "husky",
    "lint": "biome check src --verbose",
    "format": "biome format src --write",
    "release": "semantic-release",
    "prepublishOnly": "npm run build",
    "test": "mocha --config .mocharc.json",
    "test:watch": "mocha --watch --config .mocharc.json",
    "coverage": "nyc npm test"
  },
  "peerDependencies": {
    "mongoose": ">=7.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.7.0",
    "chai": "^6.2.0",
    "commitlint": "^20.1.0",
    "husky": "^9.1.7",
    "mocha": "^11.7.4",
    "mongoose": "^8.19.0",
    "nyc": "^17.1.0",
    "semantic-release": "^24.2.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "test/**/*.ts",
      "dist/**/*.ts"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "all": true,
    "check-coverage": true,
    "lines": 90,
    "functions": 90,
    "branches": 80,
    "statements": 90
  }
}
